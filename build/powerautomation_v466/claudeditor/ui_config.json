{
  "version": "4.6.6",
  "edition": "X-Masters Enhanced Edition",
  "layout": {
    "panels": {
      "workflow_panel": {
        "position": "left",
        "width": "250px",
        "components": [
          "workflow_list",
          "workflow_status"
        ]
      },
      "code_editor": {
        "position": "center",
        "features": [
          "syntax_highlight",
          "autocomplete",
          "codeflow_suggestions"
        ]
      },
      "mcp_panel": {
        "position": "right-top",
        "height": "300px",
        "components": [
          "mcp_status",
          "component_manager"
        ]
      },
      "command_panel": {
        "position": "right-bottom",
        "height": "200px",
        "components": [
          "command_input",
          "command_history"
        ]
      },
      "monitor_panel": {
        "position": "bottom",
        "height": "100px",
        "components": [
          "system_monitor",
          "performance_metrics"
        ]
      }
    }
  },
  "themes": {
    "default": "dark",
    "available": [
      "dark",
      "light",
      "high_contrast"
    ]
  },
  "mcp_integration": {
    "codeflow": {
      "enabled": true,
      "auto_suggestions": true,
      "workflow_integration": true
    },
    "xmasters": {
      "enabled": true,
      "command_prefix": "!xmasters"
    },
    "operations": {
      "enabled": true,
      "command_prefix": "!ops"
    }
  }
}