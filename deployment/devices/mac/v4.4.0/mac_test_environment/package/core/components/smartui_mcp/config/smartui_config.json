{
  "version": "4.1.0",
  "name": "SmartUI MCP",
  "description": "PowerAutomation 4.1 智能UI生成和管理组件",
  
  "service": {
    "ai_optimization_enabled": true,
    "agui_integration_enabled": true,
    "theme_management_enabled": true,
    "component_registry_enabled": true,
    "performance_monitoring_enabled": true,
    "cache_enabled": true,
    "cache_ttl": 3600
  },
  
  "generation": {
    "default_framework": "react",
    "supported_frameworks": ["react", "vue", "html"],
    "default_theme": "default",
    "auto_theme_generation": true,
    "performance_optimization": true,
    "accessibility_enhancement": true,
    "responsive_design": true
  },
  
  "templates": {
    "base_path": "core/components/smartui_mcp/templates",
    "components_path": "core/components/smartui_mcp/templates/components",
    "layouts_path": "core/components/smartui_mcp/templates/layouts",
    "pages_path": "core/components/smartui_mcp/templates/pages",
    "themes_path": "core/components/smartui_mcp/templates/themes"
  },
  
  "output": {
    "base_path": "core/components/smartui_mcp/generated",
    "components_path": "core/components/smartui_mcp/generated/components",
    "layouts_path": "core/components/smartui_mcp/generated/layouts",
    "pages_path": "core/components/smartui_mcp/generated/pages",
    "assets_path": "core/components/smartui_mcp/generated/assets"
  },
  
  "agui_integration": {
    "enabled": true,
    "version": "4.1.0",
    "auto_generate_definitions": true,
    "component_registry": true,
    "event_system": true,
    "theme_system": true
  },
  
  "ai_optimization": {
    "enabled": true,
    "context_optimization": true,
    "code_optimization": true,
    "accessibility_optimization": true,
    "performance_optimization": true,
    "seo_optimization": true
  },
  
  "themes": {
    "default_theme": "default",
    "available_themes": [
      "default",
      "dark", 
      "light",
      "corporate",
      "creative",
      "minimal"
    ],
    "custom_themes_enabled": true,
    "theme_inheritance": true,
    "css_variables": true
  },
  
  "frameworks": {
    "react": {
      "enabled": true,
      "version": "18.x",
      "typescript_support": true,
      "hooks_support": true,
      "styled_components": true
    },
    "vue": {
      "enabled": true,
      "version": "3.x",
      "typescript_support": true,
      "composition_api": true,
      "scoped_styles": true
    },
    "html": {
      "enabled": true,
      "css_framework": "tailwind",
      "javascript_support": true,
      "responsive_design": true
    }
  },
  
  "performance": {
    "caching_enabled": true,
    "cache_ttl": 3600,
    "parallel_generation": true,
    "incremental_generation": true,
    "code_splitting": true,
    "asset_optimization": true
  },
  
  "accessibility": {
    "enabled": true,
    "aria_labels": true,
    "keyboard_navigation": true,
    "screen_reader_support": true,
    "color_contrast_check": true,
    "semantic_html": true
  },
  
  "logging": {
    "level": "INFO",
    "file_logging": true,
    "console_logging": true,
    "log_file": "core/components/smartui_mcp/logs/smartui.log",
    "max_log_size": "10MB",
    "backup_count": 5
  },
  
  "development": {
    "hot_reload": true,
    "live_preview": true,
    "debug_mode": false,
    "source_maps": true,
    "development_server": {
      "enabled": true,
      "port": 3000,
      "host": "localhost"
    }
  }
}

